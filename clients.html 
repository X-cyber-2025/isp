        radial-gradient(circle at 30% 80%, rgba(0,255,128,.45), transparent 40%),
        radial-gradient(circle at 70% 70%, rgba(128,0,255,.45), transparent 40%),
        linear-gradient(120deg,#060012,#12001f,#020016);
    background-size:200% 200%;
    animation:aurora 12s ease-in-out infinite;
    display:flex;
    align-items:center;
    justify-content:center;
}

@keyframes aurora{
    0%{background-position:0% 50%}
    50%{background-position:100% 50%}
    100%{background-position:0% 50%}
}

