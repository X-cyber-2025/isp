<body>
<div class="container">

<button class="start-btn" id="btn" onclick="autoDetect()">START</button>
<div class="loader" id="loader"></div>
<div class="info" id="status">READY</div>

<script>
/* ===== ALL ROUTER IPs + DOMAINS (ALL BRANDS) ===== */
var routerIPs = [

    /* ---- Common Home Routers ---- */
    "192.168.1.1",
    "192.168.0.1",
    "192.168.8.1",
    "192.168.10.1",
    "192.168.31.1",
    "192.168.88.1",
    "192.168.100.1",
    "192.168.254.254",
    "192.168.1.20",

    /* ---- Ruijie / Reyee ---- */
    "192.168.110.1",
    "ruijie.com",
    "reyee.cn",

    /* ---- Walton Router ---- */
    "192.168.3.1",
    "waltonrouter.local",

    /* ---- 10.x Networks ---- */
    "10.0.0.1",
    "10.1.1.1",
    "10.10.10.1",

    /* ---- 172.x Networks ---- */
    "172.16.0.1",
    "172.16.1.1",

    /* ---- Brand Domains ---- */
    "tplinkwifi.net",
    "tendawifi.com",
    "netis.cc",
    "miwifi.com",
    "router.asus.com",
    "routerlogin.net"
];

var i = 0;
var found = false;

function autoDetect(){
    i = 0;
    found = false;

    btn.classList.add("running");
    btn.innerText = "SCANNING…";
    btn.disabled = true;

    loader.style.display = "block";
    status.innerText = "DETECTING ROUTER…";

    tryNext();
}

function tryNext(){
    if(i >= routerIPs.length){
        stop("ROUTER NOT FOUND");
        alert("কোনো রাউটার পাওয়া যায়নি");
        return;
    }

    var target = routerIPs[i];
    status.innerText = "TRYING " + target;

    var iframe = document.createElement("iframe");
    iframe.style.display = "none";
    iframe.src = target.startsWith("http") ? target : "http://" + target;

    var t = setTimeout(function(){
        iframe.remove();
        i++;
        if(!found) tryNext();
    }, 1200);

    iframe.onload = function(){
        clearTimeout(t);
        found = true;
        stop("ROUTER FOUND");
        window.open(iframe.src, "_blank");
        iframe.remove();
    };

    document.body.appendChild(iframe);
}

function stop(msg){
    btn.classList.remove("running");
    btn.innerText = "START";
    btn.disabled = false;

    loader.style.display = "none";
    status.innerText = msg;
}
</script>

</div>
</body>
</html>